---
import Nav from './_VersionNav';
import ScrollLayout from '../../../../layouts/ScrollLayout.astro';
import { TITLE_TRANSITION } from '../../../../components/consts';
const selected = '/api-ref/svg-table';
---

<ScrollLayout title='Welcome to SVG Title: Api' selected={selected}>

	<h1 transition:name="page-title" transition:animate={TITLE_TRANSITION}>SVG Table Type Reference</h1>
   
    <Nav client:only="react" />
    
  <p></p>
	<slot/>
    
</ScrollLayout>


<style is:global>


.version-nav {
    margin: 1rem 0;
  }

  .version-nav .version-select {
    padding: 0.5rem;
    font-size: 1rem;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .version-nav {
    position: sticky;
    display: flex;
    justify-content: end;
    gap: 2rem;
    top: 0;
    right: 0;
    margin-inline: -2rem;
    z-index: 1;
  }

  .version-nav >div {
      background-color: var(--color-background);
      padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }



  :root {
      --color-code-background: #292d3e;
      --font-mono: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo,
    Courier, monospace;

  --color-code-bg: #292d3e;
  }

  .type-definition {
      background-color: var(--color-code-background);
      font-family: monospace;
      white-space: pre;
      margin: 0;
      line-height: 1.5;
      color:#e0e0e0;
      overflow-x: auto;
  }

  .keyword {
      color: #c588ce;
      font-weight: bold;
  }

  .property {
      color: #a0a4c0;
  }

  .type {
      font-style: italic;
      color: #b69964;
  }

  .type.string {
      color: #008000;
  }

  .type.boolean, .type.number {
      color: #a5a5ff;
  }

  .type-link {
      color: #267F99;
      text-decoration: none;
  }

  .type-link:hover {
      text-decoration: underline;
  }


  .type-list {
list-style-type: none;
padding: 0;
}

.type-item {
margin-bottom: 30px;
border: 1px solid #e0e0e079;
box-shadow: 0 3px 6px rgba(112, 183, 250, 0.433);
border-radius: 5px;
padding: 15px;
}

.type-name {
font-size: 1.2em;
font-weight: bold;
color: #267F99;
}

.type-description {
margin-top: 10px;
font-style: italic;
}

.type-link {
color: #3498db;
}

@media (max-width: 600px) {
body {
  padding: 10px;
}

.type-definition {
  font-size: 0.9em;
}
}
</style>