---
const versions = ['1.3.0', '1.4.0', '1.5.0', '1.6.0', '1.7.0']; // Add or modify versions as needed
type Props = {
  version: string;
}
const selected = Astro.props.version;
---

<nav>
  <div>
    <select id="api-version-selector" onchange="changeVersion(this.value)">
      <option value="">selected version: {selected}</option>
      {versions.map((version) => (
        <option value={version}>{version}</option>
      ))}
    </select>
  </div>
</nav>

<script is:inline>
function changeVersion(version) {
    if (version) {
      window.location.href = `/api/${version}`;
    }
  }
</script>

<style>
  nav {
    margin: 1rem 0;
  }

  select {
    padding: 0.5rem;
    font-size: 1rem;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  nav {
    position: sticky;
    display: flex;
    justify-content: end;
    gap: 2rem;
    top: 0;
    right: 0;
    /* left: 300px; */
    margin-inline: -2rem;
    /* padding-right: 2rem; */
    /* z-index: 100; */
    /* background-color: var(--color-background); */
    /* padding: 10px; */
    /* box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); */
    z-index: 1;
  }

  nav >div {
      background-color: var(--color-background);
      padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

</style>
