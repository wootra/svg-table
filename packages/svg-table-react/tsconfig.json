{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["ESNext", "dom"],
		"inlineSources": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"strict": true,
		"baseUrl": ".",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"rootDir": "./src",
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "out", "eslintrc.js", "**/*.mjs"]
}
