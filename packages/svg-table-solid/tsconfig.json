{
	"extends": "@repo/typescript-config/ui-library.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "dom"],
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"alwaysStrict": true,
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true,
		"allowArbitraryExtensions": false,
		"allowJs": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"paths": {
		"tslib": ["node_modules/tslib/tslib.d.ts"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "eslintrc.js", "**/*.mjs", "public", "*.js"]
}
