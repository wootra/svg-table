{
	"extends": "@repo/typescript-config/ui-library.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowArbitraryExtensions": false,
		"allowJs": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"paths": {
		"tslib": ["node_modules/tslib/tslib.d.ts"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "eslintrc.js", "**/*.mjs", "public", "*.js"]
}
